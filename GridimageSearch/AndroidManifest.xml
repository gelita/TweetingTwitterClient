<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fanikiosoftware.gridimagesearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_label"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fanikiosoftware.gridimagesearch.SearchActivity"
            android:label="@string/app_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fanikiosoftware.gridimagesearch.ImageDisplayActivity"
            android:label="@string/title_activity_image_display" >
        </activity>
        <activity
            android:name="com.fanikiosoftware.gridimagesearch.menu_main"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.fanikiosoftware.gridimagesearch.menu_filter"
            android:label="@string/title_filter_menu" >
        </activity>
        <activity
            android:name="com.fanikiosoftware.gridimagesearch.FilterDisplayActivity"
            android:label="@string/title_activity_filter_display" >
        </activity>
    </application>

</manifest>